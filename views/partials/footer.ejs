				<div>
					<p class="text-lg font-semibold text-slate-900 mb-2">Scatch</p>
					<p>Discover curated products and build your cart seamlessly.</p>
				</div>
				<div>
					<p class="font-semibold text-slate-900 mb-2">Explore</p>
					<ul class="space-y-1">
						<li><a class="hover:text-brand" href="/">Home</a></li>
						<li><a class="hover:text-brand" href="/shop">Shop</a></li>
						<li><a class="hover:text-brand" href="/cart">Cart</a></li>
					</ul>
				</div>
				<div>
					<p class="font-semibold text-slate-900 mb-2">Support</p>
					<ul class="space-y-1">
						<li><a class="hover:text-brand" href="mailto:support@scatch.app">support@scatch.app</a></li>
						<li><span>Mon – Fri / 9am – 6pm</span></li>
					</ul>
				</div>
				<div>
					<p class="font-semibold text-slate-900 mb-2">Stay updated</p>
					<p class="text-xs mb-3">Get notified when new collections arrive.</p>
					<form id="subscribeForm" class="flex gap-2" action="/subscribe" method="post">
						<input id="subscribeEmail" name="email" type="email" placeholder="Email" required class="flex-1 rounded-lg border border-slate-200 px-3 py-2 text-sm" />
						<button id="subscribeBtn" type="submit" class="px-4 py-2 rounded-lg bg-brand text-white text-sm">Notify</button>
					</form>
					<script>
						(function(){
							const form = document.getElementById('subscribeForm');
							const btn = document.getElementById('subscribeBtn');
							const input = document.getElementById('subscribeEmail');
							function showTempMessage(message, success=true){
								const wrapper = document.createElement('div');
								wrapper.className = success ? 'mt-3 rounded-md bg-emerald-50 border border-emerald-200 text-emerald-800 px-3 py-2 text-sm' : 'mt-3 rounded-md bg-rose-50 border border-rose-200 text-rose-800 px-3 py-2 text-sm';
								wrapper.textContent = message;
								form.insertAdjacentElement('afterend', wrapper);
								setTimeout(()=> wrapper.remove(), 5000);
							}
							form.addEventListener('submit', function(e){
								e.preventDefault();
								const email = input.value.trim();
								if(!email) return showTempMessage('Please enter an email', false);
								btn.disabled = true;
								fetch(form.action, {
									method: 'POST',
									headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
									body: JSON.stringify({ email })
								}).then(res=>res.json()).then(data=>{
									btn.disabled = false;
									if(data && data.success){
										input.value = '';
										showTempMessage(data.message || 'Subscribed', true);
									} else {
										showTempMessage((data && data.message) || 'Could not subscribe', false);
									}
								}).catch(err=>{
									btn.disabled = false;
									showTempMessage('Network error', false);
								});
							});
						})();
					</script>
				</div>
			</div>
