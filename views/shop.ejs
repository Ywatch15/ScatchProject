<%- include('./partials/header') %>

<section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-white via-white to-slate-100"></div>
    <div class="absolute -top-12 right-0 w-80 h-80 bg-brand/10 blur-[140px] rounded-full"></div>

    <div class="relative max-w-6xl mx-auto px-6 py-12 space-y-10">
        <% var successMessages = []; %>
        <% if (typeof success !== 'undefined' && success !== null) { %>
            <% if (Array.isArray(success)) { %>
                <% successMessages = success.filter(Boolean); %>
            <% } else { %>
                <% successMessages = [success]; %>
            <% } %>
        <% } %>

        <% if (successMessages.length) { %>
            <div class="rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-emerald-700 flex items-center gap-2">
                <i class="ri-checkbox-circle-line text-xl"></i>
                <span><%= successMessages.join(', ') %></span>
            </div>
        <% } %>

        <div class="flex flex-col gap-3">
            <p class="text-sm font-medium text-brand uppercase tracking-[0.3em]">Shop</p>
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h1 class="text-3xl font-semibold text-slate-900">Discover new arrivals</h1>
                    <p class="text-slate-600">All products come directly from verified store owners.</p>
                </div>
                <form action="/shop" class="flex items-center gap-3">
                    <label for="sortby" class="text-sm text-slate-600">Sort by</label>
                    <select id="sortby" name="sortby" class="rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm focus:border-brand focus:ring-1 focus:ring-brand">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                    <button type="submit" class="px-4 py-2 rounded-xl bg-brand text-white text-sm font-medium">Apply</button>
                </form>
            </div>
        </div>

        <div class="grid gap-8 lg:grid-cols-[280px_1fr]">
            <aside class="space-y-6 rounded-3xl border border-slate-200 bg-white/90 p-6">
                <div>
                    <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Collections</p>
                    <div class="mt-3 flex flex-col gap-2 text-sm text-slate-600">
                        <button type="button" class="text-left px-3 py-2 rounded-2xl bg-slate-100 font-medium">New Arrivals</button>
                        <button type="button" class="text-left px-3 py-2 rounded-2xl hover:bg-slate-100 transition">All Products</button>
                        <button type="button" class="text-left px-3 py-2 rounded-2xl hover:bg-slate-100 transition">Discounted</button>
                    </div>
                </div>

                <div>
                    <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Filters</p>
                    <div class="mt-3 space-y-2 text-sm text-slate-600">
                        <label class="flex items-center gap-2">
                            <input type="checkbox" class="rounded border-slate-300 text-brand focus:ring-brand">
                            In stock
                        </label>
                        <label class="flex items-center gap-2">
                            <input type="checkbox" class="rounded border-slate-300 text-brand focus:ring-brand">
                            Discounted
                        </label>
                        <label class="flex items-center gap-2">
                            <input type="checkbox" class="rounded border-slate-300 text-brand focus:ring-brand">
                            Trending
                        </label>
                    </div>
                </div>
            </aside>

            <div class="rounded-3xl border border-slate-200 bg-white/90 p-6">
                <% if (Array.isArray(products) && products.length) { %>
                    <div class="flex items-center justify-between text-sm text-slate-500 mb-5">
                        <p>Showing <%= products.length %> product(s)</p>
                        <p>Tap + to add to your cart</p>
                    </div>
                    <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
                        <% products.forEach(function(product){ %>
                            <% var bgColor = product && product.bgcolor ? product.bgcolor : '#eef2ff'; %>
                            <% var panelColor = product && product.panelcolor ? product.panelcolor : '#0f172a'; %>
                            <% var textColor = product && product.textcolor ? product.textcolor : '#f8fafc'; %>
                            <% var price = Number(product && product.price ? product.price : 0); %>
                            <% var discount = Number(product && product.discount ? product.discount : 0); %>
                            <% var finalPrice = Math.max(price - discount, 0); %>
                            <div class="group rounded-2xl border border-slate-100 bg-white shadow-sm hover:shadow-md transition overflow-hidden">
                                <div class="relative h-48 flex items-center justify-center" <%= `style="background-color:${bgColor};"` %>>
                                    <% if (product && product.imageUrl) { %>
                                        <img class="h-32 object-contain drop-shadow" src="<%= product.imageUrl %>" alt="<%= product.name %>">
                                    <% } else if (product && product.image) { %>
                                        <img class="h-32 object-contain drop-shadow" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                                    <% } else { %>
                                        <img class="h-32 object-contain" src="/images/placeholder.png" alt="placeholder">
                                    <% } %>
                                </div>
                                <div class="p-5 space-y-3" <%= `style="background-color:${panelColor}; color:${textColor};"` %>>
                                    <div>
                                        <p class="text-sm uppercase tracking-[0.25em] opacity-80">Owner pick</p>
                                        <h3 class="text-lg font-semibold"><%= product && product.name ? product.name : 'Untitled product' %></h3>
                                    </div>
                                    <div class="flex items-baseline gap-2">
                                        <span class="text-2xl font-semibold">₹ <%= finalPrice %></span>
                                        <% if (discount) { %>
                                            <span class="text-sm line-through opacity-80">₹ <%= price %></span>
                                        <% } %>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <p class="text-xs uppercase tracking-[0.3em] opacity-80">Add to cart</p>
                                        <a class="w-10 h-10 flex items-center justify-center rounded-full bg-white/90 text-slate-900" href="/addtocart/<%= product._id %>">
                                            <i class="ri-add-line text-lg"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="rounded-2xl border border-dashed border-slate-300 bg-slate-50 p-10 text-center text-slate-500">
                        No products available yet. Check back later.
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

<%- include('./partials/footer') %>

